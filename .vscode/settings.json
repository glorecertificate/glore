{
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[sql]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "css.completion.completePropertyWithSemicolon": true,
  "css.format.enable": true,
  "css.format.maxPreserveNewLines": 100,
  "css.validate": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "eslint.enable": false,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    ".husky/_": true,
    "**/.turbo": true,
    "**/supabase/.*": true
  },
  "json.schemas": [
    {
      "fileMatch": ["biome.json"],
      "url": "./node_modules/@biomejs/biome/configuration_schema.json"
    }
  ],
  "i18n-ally.enabledFrameworks": ["next-intl"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.localesPaths": ["./config/translations"],
  "prettier.enable": false,
  "search.useGlobalIgnoreFiles": true,
  "search.useIgnoreFiles": true,
  "tailwindCSS.experimental.classRegex": [
    [
      "(tw`(?:(?:(?:[^`]*\\$\\{[^]*?\\})[^`]*)+|[^`]*`))",
      "((?:(?<=`)(?:[^\"'`]*)(?=\\${|`))|(?:(?<=\\})(?:[^\"'`]*)(?=\\${))|(?:(?<=\\})(?:[^\"'`]*)(?=`))|(?:(?<=')(?:[^\"'`]*)(?='))|(?:(?<=\")(?:[^\"'`]*)(?=\"))|(?:(?<=`)(?:[^\"'`]*)(?=`)))"
    ],
    ["cva\\(([^;]*)[\\);]", "[`'\"`]([^'\"`;]*)[`'\"`]"],
    ["cx\\(((?:[^()]|\\([^()]*\\))*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["(?:\\w+)?[Cc]lassName\\s*=\\s*[{]?[`'\"]([^`'\"]*)[`'\"][}]?"],
    ["(?:\\w+)?[Cc]lassName\\s*=\\s*[{]?`([^`]*)`[}]?"],
    ["fill=['\"]([^'\"]*)"],
    ["stroke=['\"]([^'\"]*)"]
  ],
  "tailwindCSS.experimental.configFile": "./apps/elearning/src/app/globals.css",
  "tailwindCSS.includeLanguages": {
    "svg": "html"
  },
  "tailwindCSS.lint.cssConflict": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "error",
  "typescript.tsdk": "./node_modules/typescript/lib"
}
