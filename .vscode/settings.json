{
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[sql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "css.format.newlineBetweenSelectors": false,
  "css.format.spaceAroundSelectorSeparator": true,
  "css.lint.duplicateProperties": "error",
  "deno.enablePaths": ["./apps/*/supabase/functions"],
  "deno.lint": true,
  "deno.path": "./node_modules/.bin/deno",
  "deno.unstable": ["bare-node-builtins", "broadcast-channel", "byonm", "cron", "ffi", "fs", "http", "kv", "net", "sloppy-imports", "unsafe-proto", "webgpu", "worker-options"],
  "editor.tabSize": 2,
  "eslint.codeActionsOnSave.mode": "problems",
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.validate": ["typescript", "typescriptreact"],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.turbo": true
  },
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "gitlens.ai.generateCommits.customInstructions": "Use the Conventional Commit specification to provide a clear, concise and descriptive commit message without using a complex language. Optionally add a body including a sentence of maximum 20 words explaining the general changes and, if needed, append a bullet list of max 5 points of 10 words or less with more specific references. Title and list items must be written in an imperative mood using singular first-person verbs and a sentence-case format. Bullet points must not end with a period. The body sentence must use a third-person perspective, be sentence-case and end with a dot. Example commit message: \"feat: Correct typos across the codebase\n\nCorrected several typos in the codebase to improve readability and maintainability.\n\n- Fix typo in variable name\n- Update comments for clarity\n- Refactor function names for consistency\"",
  "gitlens.ai.largePromptWarningThreshold": 1000000,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:claude-sonnet-4",
  "i18n-ally.enabledFrameworks": ["next-intl"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.localesPaths": ["./config/translations"],
  "prettier.ignorePath": "",
  "search.useGlobalIgnoreFiles": true,
  "search.useIgnoreFiles": true,
  "tailwindCSS.experimental.classRegex": [
    [
      "(tw`(?:(?:(?:[^`]*\\$\\{[^]*?\\})[^`]*)+|[^`]*`))",
      "((?:(?<=`)(?:[^\"'`]*)(?=\\${|`))|(?:(?<=\\})(?:[^\"'`]*)(?=\\${))|(?:(?<=\\})(?:[^\"'`]*)(?=`))|(?:(?<=')(?:[^\"'`]*)(?='))|(?:(?<=\")(?:[^\"'`]*)(?=\"))|(?:(?<=`)(?:[^\"'`]*)(?=`)))"
    ],
    ["cva\\(([^;]*)[\\);]", "[`'\"`]([^'\"`;]*)[`'\"`]"],
    ["cx\\(((?:[^()]|\\([^()]*\\))*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["(?:\\w+)?[Cc]lassName\\s*=\\s*[{]?[`'\"]([^`'\"]*)[`'\"][}]?"],
    ["(?:\\w+)?[Cc]lassName\\s*=\\s*[{]?`([^`]*)`[}]?"],
    ["fill=['\"]([^'\"]*)"],
    ["stroke=['\"]([^'\"]*)"]
  ],
  "tailwindCSS.experimental.configFile": "./apps/elearning/src/app/globals.css",
  "tailwindCSS.includeLanguages": {
    "svg": "html"
  },
  "tailwindCSS.lint.cssConflict": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "error",
  "typescript.tsdk": "./node_modules/typescript/lib"
}
