{
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "biome.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.tabSize": 2,
  "eslint.enable": false,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "i18n-ally.annotationInPlace": false,
  "i18n-ally.enabledFrameworks": ["next-intl"],
  "i18n-ally.localesPaths": ["./apps/elearning/config/translations"],
  "i18n-ally.namespace": true,
  "json.schemas": [
    {
      "fileMatch": ["biome.json"],
      "url": "./node_modules/@biomejs/biome/configuration_schema.json"
    }
  ],
  "prettier.enable": false,
  "tailwindCSS.experimental.classRegex": [
    ["cn\\(((?:[^()]|\\([^()]*\\))*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cva\\(([^;]*)[\\);]", "[`'\"`]([^'\"`;]*)[`'\"`]"]
  ],
  "tailwindCSS.experimental.configFile": "./apps/elearning/src/app/globals.css",
  "tailwindCSS.includeLanguages": {
    "svg": "html"
  },
  "typescript.preferences.autoImportFileExcludePatterns": ["lucide-react"],
  "typescript.tsdk": "./node_modules/typescript/lib"
}
