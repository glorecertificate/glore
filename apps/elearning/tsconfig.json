{
  "extends": "@glore/tsconfig/nextjs",
  "include": ["**/*.ts", "**/*.tsx", ".next/types"],
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "paths": {
      "next/types/*": ["./.next/types/*"],
      "supabase/types": ["./supabase/types.ts"],
      "@/*": ["./src/*"],
      "@config/*": ["./config/*.json"]
    },
    "plugins": [{ "name": "next" }],
    "types": ["deno"]
  }
}
