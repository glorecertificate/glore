{
  "extends": "@repo/tsconfig/nextjs",
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next-env.d.ts"],
  "exclude": ["build", "node_modules"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["../../config/*.json"],
      "next/types/*": ["./.next/types/*"],
      "supabase/*": ["./supabase/*"]
    },
    "plugins": [{ "name": "next" }]
  }
}
