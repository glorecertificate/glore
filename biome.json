{
  "root": true,
  "files": {
    "includes": ["**/*.ts", "**/*.tsx", "**/*.json"],
    "experimentalScannerIgnores": [
      ".next",
      ".turbo",
      ".vercel",
      "dist",
      "node_modules"
    ],
    "ignoreUnknown": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": true,
    "attributePosition": "auto",
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "useEditorconfig": true
  },
  "linter": {
    "domains": {
      "project": "recommended"
    },
    "rules": {
      "recommended": true,
      "a11y": {
        "noStaticElementInteractions": "off",
        "noSvgWithoutTitle": "off",
        "useFocusableInteractive": "off",
        "useKeyWithClickEvents": "off",
        "useMediaCaption": "off",
        "useSemanticElements": "off"
      },
      "complexity": {
        "noForEach": "error",
        "noImportantStyles": "off",
        "noUselessStringConcat": "error",
        "useArrowFunction": "error",
        "useSimplifiedLogicExpression": {
          "level": "error",
          "fix": "safe"
        }
      },
      "correctness": {
        "noConstAssign": {
          "level": "error",
          "fix": "safe"
        },
        "noInvalidBuiltinInstantiation": {
          "level": "error",
          "fix": "safe"
        },
        "noNestedComponentDefinitions": "off",
        "noStringCaseMismatch": {
          "level": "error",
          "fix": "safe"
        },
        "noUnusedFunctionParameters": {
          "level": "error"
        },
        "noUnusedImports": {
          "level": "error",
          "fix": "safe"
        },
        "noUnusedVariables": {
          "level": "error",
          "options": {
            "ignoreRestSiblings": true
          }
        },
        "useExhaustiveDependencies": {
          "level": "error",
          "fix": "safe"
        },
        "useParseIntRadix": {
          "level": "error",
          "fix": "safe"
        },
        "useUniqueElementIds": "off"
      },
      "nursery": {
        "noImportCycles": "off",
        "noUselessUndefined": "error",
        "useAnchorHref": "off",
        "useConsistentArrowReturn": "error",
        "useConsistentTypeDefinitions": {
          "level": "error",
          "fix": "safe",
          "options": {
            "style": "interface"
          }
        },
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "functions": ["clsx", "cn", "cva"]
          }
        }
      },
      "performance": {
        "noAccumulatingSpread": "off",
        "noNamespaceImport": "error",
        "useTopLevelRegex": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "noCommonJs": "error",
        "noInferrableTypes": "error",
        "noNonNullAssertion": "off",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "patterns": [
              {
                "group": ["../*"],
                "message": "Use path aliases instead of parent imports."
              }
            ]
          }
        },
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "error",
        "useCollapsedIf": "error",
        "useConsistentArrayType": {
          "level": "error",
          "fix": "safe",
          "options": {
            "syntax": "shorthand"
          }
        },
        "useConsistentObjectDefinitions": {
          "level": "error",
          "options": {
            "syntax": "shorthand"
          }
        },
        "useConst": "error",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        },
        "useForOf": "error",
        "useFragmentSyntax": {
          "level": "error",
          "fix": "safe"
        },
        "useImportType": {
          "level": "error",
          "options": {
            "style": "inlineType"
          }
        },
        "useSelfClosingElements": "error",
        "useShorthandAssign": {
          "level": "error",
          "fix": "safe"
        },
        "useTemplate": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["info", "error", "warn"]
          }
        },
        "noDocumentCookie": "off",
        "noDoubleEquals": {
          "level": "error",
          "fix": "safe"
        },
        "noUnknownAtRules": "off",
        "noVar": {
          "level": "error",
          "fix": "safe"
        },
        "useAwait": "error"
      }
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",
              ["next", "next/*", "react", "react/*"],
              ":BLANK_LINE:",
              [":PACKAGE:", "!@glore/**"],
              ":BLANK_LINE:",
              "@glore/**",
              ":BLANK_LINE:",
              [":ALIAS:", ":PATH:"]
            ],
            "identifierOrder": "lexicographic"
          }
        },
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    }
  },
  "json": {
    "formatter": {
      "lineWidth": 80,
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "includes": ["*.config.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noTemplateCurlyInString": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/**"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": "off"
          }
        }
      }
    }
  ]
}
