{
  "name": "glore",
  "homepage": "https://glorecertificate.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielecanepa/glore.git"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build --ui stream",
    "build:packages": "turbo run build --filter @repo/*",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "watch": "turbo run watch",
    "typegen": "turbo run typegen",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "check": "turbo run check",
    "db": "turbo run db --ui stream --",
    "analyze": "turbo run analyze",
    "deploy:preview": "pnpm check && vercel build && vercel --prebuilt",
    "deploy:prod": "pnpm check && vercel build --prod && vercel --prebuilt --prod",
    "bump": "corepack use pnpm@latest && pnpm upgrade --recursive",
    "bump:latest": "pnpm bump --latest",
    "release": "dotenv release-it -- --config release.config.ts"
  },
  "prettier": "@repo/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^8.0.2",
    "@repo/cli": "workspace:^",
    "@repo/eslint-config": "workspace:^",
    "@repo/prettier-config": "workspace:^",
    "@repo/release-config": "workspace:^",
    "@repo/tsconfig": "workspace:^",
    "@types/node": "catalog:",
    "deno": "^2.5.2",
    "dotenv-cli": "^10.0.0",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "prettier": "catalog:",
    "release-it": "catalog:",
    "shellcheck": "catalog:",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "vercel": "^44.7.3"
  }
}
