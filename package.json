{
  "name": "glore",
  "version": "0.5.0",
  "homepage": "https://glorecertificate.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glorecertificate/glore.git"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build --ui stream",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "watch": "turbo run watch",
    "type-check": "turbo run type-check",
    "lint": "biome check",
    "lint:fix": "biome check --fix --unsafe",
    "format": "biome format",
    "check": "turbo run lint type-check --parallel",
    "supabase": "cd apps/elearning && supabase",
    "deploy:preview": "vercel build && vercel --prebuilt",
    "deploy:production": "vercel build && vercel --prebuilt --prod",
    "bump": "corepack use pnpm@latest && pnpm upgrade --recursive",
    "bump:latest": "pnpm bump --latest",
    "release": "dotenv release-it -- --config release.config.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@glore/tsconfig": "workspace:^",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "catalog:",
    "deno": "^2.5.4",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.7",
    "release-it": "^19.0.5",
    "shellcheck": "^3.1.0",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "vercel": "^48.2.9"
  },
  "resolutions": {
    "conventional-changelog-conventionalcommits": "8.0.0"
  }
}
