{
  "name": "glore",
  "version": "0.5.0",
  "homepage": "https://glorecertificate.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glorecertificate/glore.git"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "scripts": {
    "prepare": "husky",
    "typegen": "turbo run typegen",
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev edge email --parallel --ui=tui",
    "lint": "biome check",
    "lint:fix": "biome check --fix --unsafe",
    "format": "biome format",
    "check": "turbo run check && biome check",
    "deploy:preview": "vercel build && vercel --prebuilt",
    "deploy:production": "vercel build && vercel --prebuilt --prod",
    "bump": "corepack use pnpm@latest && pnpm upgrade --recursive",
    "bump:latest": "pnpm bump --latest",
    "release": "dotenv release-it -- --config release.config.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@glore/tsconfig": "workspace:^",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "catalog:",
    "deno": "^2.5.4",
    "dotenv-cli": "catalog:",
    "husky": "^9.1.7",
    "release-it": "^19.0.5",
    "shellcheck": "^3.1.0",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "vercel": "^48.5.0"
  },
  "resolutions": {
    "conventional-changelog-conventionalcommits": "8.0.0"
  }
}
