{
  "name": "glore",
  "version": "0.4.14",
  "homepage": "https://glorecertificate.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielecanepa/glore.git"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "prettier": "@repo/prettier-config",
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build --ui=stream",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "typegen": "turbo run typegen",
    "type-check": "pnpm root#type-check && turbo run type-check",
    "lint": "pnpm root#lint && turbo run lint",
    "lint:fix": "pnpm root#lint:fix && turbo run lint:fix",
    "check": "pnpm root#check && turbo run check",
    "db": "turbo run db --ui=stream --",
    "deploy:preview": "pnpm check && vercel build && vercel --prebuilt",
    "deploy:prod": "pnpm check && vercel build --prod && vercel --prebuilt --prod",
    "analyze": "turbo run analyze",
    "bump": "corepack use pnpm@latest && pnpm upgrade --recursive",
    "bump:latest": "pnpm bump --latest",
    "release": "dotenv release-it -- --config release.config.ts",
    "root#type-check": "tsc --noEmit",
    "root#lint": "eslint . && prettier --check . && shellcheck scripts/*.sh $(find .husky -maxdepth 1 -type f)",
    "root#lint:fix": "eslint --fix . && prettier --write .",
    "root#check": "pnpm root#type-check && pnpm root#lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "@repo/eslint-config": "workspace:^",
    "@repo/prettier-config": "workspace:^",
    "@repo/release-config": "workspace:^",
    "@repo/tsconfig": "workspace:^",
    "@types/node": "catalog:",
    "dotenv-cli": "^10.0.0",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "prettier": "catalog:",
    "release-it": "catalog:",
    "release-it-pnpm": "^4.6.6",
    "shellcheck": "catalog:",
    "turbo": "^2.5.6",
    "typescript": "catalog:",
    "vercel": "^47.1.3"
  }
}
