    "eslint-plugin-better-tailwindcss": "^3.7.9",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prefer-arrow-functions": "^3.9.1",
