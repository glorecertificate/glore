{
  "name": "@repo/prettier-config",
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/types.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.cjs",
      "default": "./build/index.cjs"
    },
    "./*": {
      "types": "./build/configs/*.d.ts",
      "import": "./build/configs/*.js",
      "require": "./build/configs/*.cjs",
      "default": "./build/configs/*.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "type-check": "tsc && tsup --silent",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "check": "pnpm type-check && pnpm lint"
  },
  "prettier": "./build/index.cjs",
  "dependencies": {
    "deepmerge-ts": "catalog:"
  },
  "devDependencies": {
    "prettier": "catalog:",
    "prettier-plugin-sql": "^0.19.2",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
