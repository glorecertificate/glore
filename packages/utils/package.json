{
  "name": "@repo/utils",
  "type": "module",
  "exports": {
    "./*": {
      "types": "./build/*.d.ts",
      "import": "./build/*.js",
      "require": "./build/*.cjs",
      "default": "./build/*.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "type-check": "tsc && tsup --silent",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "check": "pnpm type-check && pnpm lint"
  },
  "prettier": "@repo/prettier-config",
  "devDependencies": {
    "@repo/prettier-config": "workspace:^",
    "@repo/tsconfig": "workspace:^",
    "@repo/tsup-config": "workspace:^",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
