{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "config/**",
    ".env",
    ".node-version",
    "package.json",
    "pnpm-workspace.yaml",
    "tsconfig.json",
    "turbo.json"
  ],
  "globalEnv": [
    "APP_URL",
    "NEXT_TELEMETRY_DISABLED",
    "NODE_ENV",
    "SUPABASE_TOKEN",
    "TURBO_TEAM",
    "TURBO_TELEMETRY_DISABLED",
    "TURBO_TOKEN",
    "VERCEL_TELEMETRY_DISABLED"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "AUTH_EMAIL_HOOK_SECRET",
        "COOKIE_PREFIX",
        "EMAIL_SENDER",
        "ENABLE_EXPERIMENTAL_COREPACK",
        "NEXT_PUBLIC_*",
        "OPENAI_API_KEY",
        "OPENAI_MODEL",
        "POSTGRES_DATABASE",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_PRISMA_URL",
        "POSTGRES_URL_NON_POOLING",
        "POSTGRES_URL",
        "POSTGRES_USER",
        "SMTP_HOST",
        "SMTP_PASSWORD",
        "SMTP_USER",
        "SUPABASE_ANON_KEY",
        "SUPABASE_DB_URL",
        "SUPABASE_JWT_SECRET",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**", ".vercel/output/**", "dist/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "env": [
        "COOKIE_PREFIX",
        "NEXT_PUBLIC_*",
        "OPENAI_API_KEY",
        "OPENAI_MODEL",
        "STORAGE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_DB_URL",
        "SUPABASE_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "AUTH_EMAIL_HOOK_SECRET",
        "COOKIE_PREFIX",
        "EMAIL_SENDER",
        "NEXT_PUBLIC_*",
        "OPENAI_API_KEY",
        "OPENAI_MODEL",
        "SMTP_HOST",
        "SMTP_PASSWORD",
        "SMTP_USER",
        "STORAGE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_DB_URL",
        "SUPABASE_URL"
      ]
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "typegen": {
      "dependsOn": ["^typegen"],
      "outputs": ["**/*.d.ts", "supabase/types.ts"],
      "env": ["SUPABASE_DB_URL"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "env": [
        "AUTH_EMAIL_HOOK_SECRET",
        "COOKIE_PREFIX",
        "EMAIL_SENDER",
        "SMTP_HOST",
        "SMTP_PASSWORD",
        "SMTP_USER",
        "SUPABASE_DB_URL"
      ]
    },
    "type-check:root": {},
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
