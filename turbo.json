{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "config/**",
    ".env",
    ".node-version",
    "package.json",
    "pnpm-workspace.yaml",
    "tsconfig.json",
    "turbo.json"
  ],
  "globalEnv": [
    "APP_URL",
    "STORAGE_URL",
    "SUPABASE_ACCESS_TOKEN",
    "OPENAI_API_KEY",
    "OPENAI_MODEL",
    "TURBO_TEAM",
    "TURBO_TOKEN"
  ],
  "tasks": {
    "typegen": {
      "dependsOn": ["^typegen"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_*",
        "ENABLE_EXPERIMENTAL_COREPACK",
        "SUPABASE_ANON_KEY",
        "SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "EMAIL_SENDER",
        "SMTP_HOST",
        "SMTP_PASSWORD",
        "SMTP_USER",
        "POSTGRES_DATABASE",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_PRISMA_URL",
        "POSTGRES_URL_NON_POOLING",
        "POSTGRES_URL",
        "POSTGRES_USER"
      ],
      "outputs": [".next/**", "!.next/cache/**", ".vercel/output/**", "dist/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "edge": {
      "cache": false,
      "persistent": true
    },
    "email": {
      "cache": false,
      "persistent": true
    },
    "check": {
      "dependsOn": ["^check"]
    }
  }
}
