{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "globalEnv": [
    "GH_TOKEN",
    "GITHUB_TOKEN",
    "ISSUE_PREFIX",
    "ISSUE_URL",
    "NODE_ENV",
    "OPENAI_API_KEY",
    "SUPABASE_ACCESS_TOKEN",
    "SUPABASE_DB_URL"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "ENABLE_EXPERIMENTAL_COREPACK",
        "POSTGRES_DATABASE",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_PRISMA_URL",
        "POSTGRES_URL",
        "POSTGRES_URL_NON_POOLING",
        "POSTGRES_USER",
        "SUPABASE_ANON_KEY",
        "SUPABASE_JWT_SECRET",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**", ".vercel/output/**", "build/**"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "env": ["SUPABASE_ANON_KEY", "SUPABASE_URL"],
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typegen": {
      "outputs": ["**/*.d.ts"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "db": {
      "cache": false,
      "dependsOn": ["^db"],
      "outputs": ["supabase/**"]
    }
  }
}
